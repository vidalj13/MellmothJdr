@using System.Security.Claims
@using MellmothJdr.Shared

@inherits CustomTooltipWithImageComponent;

<MudTooltip Arrow="@Arrow" Placement="@Placement" Class="@("customMudTooltip"+Width)">
    <ChildContent>
        <MudAvatar Size="Size.Small">
            <MudImage Src="@SrcImage"></MudImage>
        </MudAvatar>
        @Titre

    </ChildContent>
    <TooltipContent>
        <MudText Typo="Typo.body2">
        <MudGrid>

            <MudItem xs="3" md="6" Class="d-none d-md-block">
                <MudPaper style='background-color: rgba(0, 0, 0, 1);'>
                    <MudImage Src="@SrcImage" Alt="@Titre" Style="@($"width:100%;")" Elevation="25" />
                </MudPaper>
            </MudItem>
                <MudItem xs="12" md="6">
                <MudGrid>
                    <MudItem xs="12">
                        <MudPaper><MudText>@Titre</MudText></MudPaper>
                        
                    </MudItem>

                        <MudFlexBreak />
                    <MudItem xs="12">
                        <MudPaper>
                                <MudText Align="Align.Left">@Description</MudText>
                        </MudPaper>
                    </MudItem>
                </MudGrid>
            </MudItem>

            </MudGrid>
        </MudText>
    </TooltipContent>
</MudTooltip>

<style>
    .@("customMudTooltip"+Width) {
        max-width: @(Width+"px !important");
    }
</style>